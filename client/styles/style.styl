html, body
  height 100%
  margin 0

body
  background radial-gradient(#f34235, #c52727)
  background-size cover
  display flex
  align-items center
  justify-content center

main
  flex 1 0 auto
  text-align center

img
  width 45vmin
  height 45vmin
  filter drop-shadow(1px 15px 12px alpha(#000, 30%))

a
  display block
  color #222
  text-decoration none
  font 3.75vmin/150% Sans-serif
  margin-top 1rem
  outline-color red
  text-shadow 1px 3px 12px alpha(#000, 30%)

b
  color #010103